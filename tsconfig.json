{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "paths": {
      "@theme/*": ["src/.vitepress/theme/*"]
    }
  },
  "include": ["env.d.ts", "src/**/*", "src/.vitepress/**/*"]
}
